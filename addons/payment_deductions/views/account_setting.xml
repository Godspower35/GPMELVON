<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_account_view_form" model="ir.ui.view">
        <field name="name">account.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='quick_edit_mode']" position="after">
                <block title="Customer Discount" id="Customer_discount">
                    <setting string="Payment Accounts">
                        <div class="o_setting_left_panel" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">The following customer payment accounts.
                            </span>
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="stamp_account" class="col-lg-5 o_light_label" />
                                    <field name="stamp_account" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                                <div class="row mt8">
                                    <label for="withholding_in_account" class="col-lg-5 o_light_label" />
                                    <field name="withholding_in_account" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                                <div class="row mt8">
                                    <label for="withholding_out_account" class="col-lg-5 o_light_label" />
                                    <field name="withholding_out_account" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                                <div class="row mt8">
                                    <label for="withholding_out_account_3" class="col-lg-5 o_light_label" />
                                    <field name="withholding_out_account_3" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                                <div class="row mt8">
                                    <label for="advertising_account" class="col-lg-5 o_light_label" />
                                    <field name="advertising_account" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                                <div class="row mt8">
                                    <label for="discount_account" class="col-lg-5 o_light_label" />
                                    <field name="discount_account" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                                <div class="row mt8">
                                    <label for="admin_fees" class="col-lg-5 o_light_label" />
                                    <field name="admin_fees" domain="[('company_ids', 'in', current_company_id)]" />
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>