<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nile_view_account_payment_form_inherit" model="ir.ui.view">
        <field name="name">nile.scan.account.payment.view.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="priority">10000</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="discount_amount" string="Discount Amount" invisible="payment_type != 'inbound'" />
                <field name="stamp_amount" string="Stamp Duty" invisible="payment_type != 'inbound'" />
                <field name="admin_fees" string="Admin Fees" invisible="payment_type != 'inbound'" />
                <field name="withholding_in_amount" string="WHT (Incoming)" invisible="payment_type != 'inbound'" />
                <field name="withholding_out_amount" string="WHT (Outgoing)" invisible="payment_type == 'inbound'" />
                <field name="withholding_out_amount_3" string="WHT (Outgoing 3%)" invisible="payment_type == 'inbound'" />
                <field name="advertising_amount" string="Advertising Fees" invisible="payment_type != 'inbound'" />
            </xpath>
        </field>
    </record>
</odoo>
